mkdir -p output
# build our makeshift xxd and use it to convert the injectable main function into a c-string
clang -o ./output/moongin.xxd ./helpers/moongin_xxd.c
./output/moongin.xxd
# then actually build the "brewer"
clang -o ./output/moongin.brew ./src/moongin_brew.c --static
# and test it out on some example lua code
./output/moongin.brew ./helpers/main.lua xlinux