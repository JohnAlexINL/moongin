mkdir -p output
# pre-prepare our "library"
mkdir -p ./src/helpers
bytes moongin_frame ./src/payload/moongin.c ./src/helpers/moongin.h
bytes moongin_list  ./src/payload/list.c ./src/helpers/list.h
bytes moongin_gsdl  ./src/payload/gsdl.c ./src/helpers/gsdl.h
bytes moongin_glua  ./src/payload/glua.c ./src/helpers/glua.h
bytes moongin_item  ./src/payload/item.c ./src/helpers/item.h
# then actually build the "brewer"
gcc -o ./output/moongin.brew ./src/moongin_brew.c --static
# and test it out on some example lua code
./output/moongin.brew main ./helpers/main.lua xlinux